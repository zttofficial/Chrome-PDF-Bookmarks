{
  "name": "Chrome PDF Bookmarks",
  "version": "1.0",
  "description": "Add bookmarks to the native Chrome PDF viewer",
  "background": {
	"scripts": ["background.js"],
	"persistent": false
  },
  "options_page": "options.html",
  "permissions": [
    "tabs","activeTab","declarativeContent","storage"
  ],
  "browser_action": {
    "default_popup": "popup.html",
	"default_icon": {
      "16": "images/pdf-icon16.png",
      "32": "images/pdf-icon32.png",
      "48": "images/pdf-icon48.png",
      "128": "images/pdf-icon128.png"
    }
  },
  "icons": {
    "16": "images/pdf-icon16.png",
    "32": "images/pdf-icon32.png",
    "48": "images/pdf-icon48.png",
    "128": "images/pdf-icon128.png"
  },
  "manifest_version": 2
}